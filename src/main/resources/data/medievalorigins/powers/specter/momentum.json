{
    "name": "Momentum",
    "description": "Speeeeeed go brrrrrrrrrrrr",

    "type": "origins:multiple",
    "resource": {
        "type": "origins:resource",
        "min": 100,
        "max": 300,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png",
            "bar_index": 16
        },
        "start_value": 100
    },
    "speed": {
        "type": "apoli:modify_attribute",
        "attribute": "minecraft:generic.movement_speed",
        "modifiers": [
            {
                "operation": "multiply_base_multiplicative",
                "value": 0.0,
                "resource":  "*:*_resource"
            },
            {
                "operation": "multiply_base_multiplicative",
                "value": -0.99
            }
        ]
    },
    "speedup": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_resource",
                    "change": 4
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:sprinting"
                }
            ]
        }
    },
    "speeddown": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_resource",
                    "change": -6
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:sprinting",
                    "inverted": true
                }
            ]
        }
